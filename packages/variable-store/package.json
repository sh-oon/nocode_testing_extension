{
  "name": "@like-cake/variable-store",
  "version": "1.0.0",
  "description": "Variable store for managing flow variables with interpolation and JSONPath support",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "biome check src",
    "lint:fix": "biome check --write --unsafe src",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@like-cake/ast-types": "*",
    "jsonpath-plus": "^10.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@like-cake/tsconfig": "*",
    "tsup": "~8.5.0",
    "typescript": "~5.9.2",
    "vitest": "^2.0.0"
  }
}
