{
  "name": "@like-cake/step-player",
  "version": "1.0.0",
  "description": "Step playback engine for Extension and Puppeteer",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "biome check src",
    "lint:fix": "biome check --write --unsafe src",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@like-cake/api-interceptor": "*",
    "@like-cake/ast-types": "*",
    "@like-cake/diff-engine": "*",
    "@like-cake/dom-serializer": "*"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@like-cake/tsconfig": "*",
    "tsup": "~8.5.0",
    "typescript": "~5.9.2",
    "vitest": "^2.0.0"
  }
}
